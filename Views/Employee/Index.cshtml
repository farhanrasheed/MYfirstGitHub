@model IEnumerable<MYTHIRDLECTURE1.Models.Employee>

<button type="submit" id="AddButton" class="btn btn-outline-primary" style="margin-top:8px;margin-bottom:3px;">Add New Employee</button>

<div class="table" style="margin-top:5px">
    <table class="table table-striped">
        <thead>
            <tr>
                <td><b>Name</b></td>
                <td><b>EmpSalary</b></td>
                <td><b>Department</b></td>
               <td><b>Actions</b></td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employeename</td>
                    <td>@item.Empsalary</td>
                    <td>@item.Department</td>
                    <td>
                        <button id="editButton" onclick="EditButtonClick(@item.Employeeid)" class="btn btn-outline-primary">Edit</button>
                        <button id="deleteButton" onclick="DeleteButtonClick(@item.Employeeid)" class="btn btn-outline-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Add new Employee</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="ModalBody">
                <!-- Form -->
                <form action="" id="PopUpForm" class="form-container">
                    <div class="form-group">
                        <input type="hidden" name="Employeeid" id="Employeeid" class="form-control">
                    </div>
                    <div class="form-group">
                        <label><b>Enter Name</b></label>
                        <input type="text" id="Employeename" name="Employeename" class="form-control" placeholder="Enter Your Name">
                    </div>
                    <div class="form-group">
                            <label><b>Enter Salary</b></label>
                            <input type="number" id="Empsalary" name="Empsalary" class="form-control" placeholder="Enter Salary">
                        </div>
                        <div class="form-group">
                            <label><b>Enter Department</b></label>
                            <input type="text" id="Department" name="Department" class="form-control" placeholder="Enter Department">
                        </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" value="submit" id="SubmitButton" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
